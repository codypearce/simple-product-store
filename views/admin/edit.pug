extends ./layout

block links
	a(href="/admin" class="link") Back to Admin
	
block content
	h3(class="mb-4") Edit Product
	form(action="/admin/product/edit/" + product._id method="post" enctype="multipart/form-data") 
		.row
			.col-6
				.form-group
					input.form-control(type="text", aria-describedby="Title", placeholder="Title" name="title" required value=product.title)
			.col-6
				.form-group
					input.form-control(type="text", aria-describedby="slug", placeholder="Slug" name="slug" required alue=product.slug)
		.row
			.col-6
				.form-group
					input.form-control(type="number", aria-describedby="price", placeholder="Price" name="price" required value=product.price)
			.col-6
				.form-group
					input.form-control(type="url", aria-describedby="externalLink", placeholder="External Link" required name="externalLink" value=product.externalLink)
		.row
			.col-6
				.form-group
					label Image
					input.form-control-file(type="file" name="imageUpload" id="imageUpload")
			.col-6
				if product.imgLink
					img(src='/productImages/'+product.imgLink class="admin_productImg")
					input(type="hidden" value=product.imgLink name="originalImgLink")
				else
					p No product image found
		.form-group
			label Description
			textarea(class="form-control" rows=5 name="description") #{product.description}
		button(class="btn btn-outline-success" type=submit id="submitBtn") Save
