extends ./layout

block links
	a(href="/admin" class="link") Products
	a(href="/admin/user/profile" class="link") Profile
	a(href="/" class="link") Back to Site

block content
	div(class="d-flex justify-content-between align-items-baseline mb-4")
		span.d-flex.flex-row.align-items-baseline
			h3 List of Users
			small.ml-3 #{users.length} users
		a(href="/admin/product/add" class="btn btn-outline-primary") Add
	hr.mb-5
	if users.length > 0
		each user in users
			div(class="my-4 d-flex flex-row justify-content-between")
				div(class="")
					div(class="d-flex flex-row align-items-center")
						h2 #{user.email}
	
