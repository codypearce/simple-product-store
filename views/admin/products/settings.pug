extends ../layout

block links
    a(href="/admin" class="link") Back to Admin
    
block content
    h3(class="mb-4") Settings
    h3 #{msg}
    div(class="mt-5")
        div(class="my-4 d-flex flex-row justify-content-between")
            for setting in settings
                div(class="")
                    div(class="d-flex flex-row align-items-center")
                        span.settings_name #{settings.humanName}
                        input.form-control(type="number", aria-describedby=settings.humanName placeholder=settings.humanName name=settings.name required value=setting.value)
                div()
                    button(class="btn btn-edit btn-outline-warning") Update
