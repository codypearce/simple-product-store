extends layouts/main

block title
	h2 #{product.title}
	
block links
	a(href="/" class="link") Back to list
	
block content
	main.mt-5
		.container
			.row
				.col-6
					if product.imgLink
						.product-box
							img(src='/productImages/' + product.imgLink)
					else
						.product-box
				.col-6.flex-column.d-flex.justify-content-between
					.row.d-flex.justify-content-between.align-items-center
						h3 Price
						h2 $#{product.price}
					.row.mt-3.d-flex.justify-content-between.align-items-center
						.categories 
							for category in product.categories
								.category-link #{category}
						a(class="btn btn-outline-primary" href=product.externalLink) Buy
			.row.mt-5
				.col-12
					p #{product.description}
